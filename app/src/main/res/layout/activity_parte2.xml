<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Parte2Activity">

    <Button
        android:id="@+id/btn_Parte21"
        android:layout_width="125dp"
        android:layout_height="64dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="200dp"
        android:text="Parte 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_sushi1" />

    <Button
        android:id="@+id/btn_Parte23"
        android:layout_width="125dp"
        android:layout_height="64dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:text="Parte 3"
        app:layout_constraintStart_toEndOf="@+id/btn_Parte21"
        app:layout_constraintTop_toBottomOf="@+id/img_sushi2" />

    <ImageView
        android:id="@+id/img_sushi1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="54dp"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sushi1" />

    <ImageView
        android:id="@+id/img_sushi2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="54dp"
        android:scaleType="center"
        app:layout_constraintStart_toEndOf="@+id/img_sushi1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sushi2" />
</androidx.constraintlayout.widget.ConstraintLayout>